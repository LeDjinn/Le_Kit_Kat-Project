<!--Section: Block Content-->
<section class="container-fluid">

  <!--Grid row-->
  <div class="row">

    <!--Grid column-->
    <div class="col-lg-8">
    <% @products.each do |product| %>
      <!-- Card -->
      <div class="card wish-list mb-3">
        <div class="card-body">

          <h5 class="mb-4"><%= product.title %></h5>

          <div class="row mb-4">
            <div class="col-md-5 col-lg-3 col-xl-3">
              <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                <img class="img-fluid w-100"
                <a href="#!">
                  <div class="mask waves-effect waves-light">
                    <img class="img-fluid w-100"
                    <%= image_tag(product.image, style:'width:100%') if product.image.attached?  %>
                    <div class="mask rgba-black-slight waves-effect waves-light"></div>
                  </div>
                </a>
              </div>
            </div>
            <div class="col-md-7 col-lg-9 col-xl-9">
              <div>
                <div class="d-flex justify-content-between">
                  <div>
                    <p class="mb-3 text-muted text-uppercase small"><%= product.description %></p>
                  </div>
                  <%= form_for @order_item, remote: true  do |f|%>    
                  <div>
                    
                    <small  class="form-text text-muted text-center">
                      <%= f.hidden_field :product_id, :value => product.id %>
                      <%= f.number_field :quantity, :value => 1, :min =>  1%>
                    </small>
                  </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <a href="#!" type="button" class="card-link-secondary small text-uppercase mr-3"><i
                        class="fas fa-trash-alt mr-1"></i>  <%= f.submit "Add to Card "%> </a>                          
                  </div>
                  <p class="mb-0"><span><strong>$17.99</strong></span></p>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      </br>
      <% end %> 
      <!-- Card -->


     

    </div>
    <!--Grid column-->

    <!--Grid column-->
    <div class="col-lg-4">

      <!-- Card -->
      <div class="card mb-3 ">
        <div class="card-body ">

          <h5 class="mb-3">The total amount of</h5>

          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Temporary amount
              <span>$25.98</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              Shipping
              <span>Gratis</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
              <div>
                <strong>The total amount of</strong>
                <strong>
                  <p class="mb-0">(including VAT)</p>
                </strong>
              </div>
              <span><strong>$53.98</strong></span>
            </li>
          </ul>

          <button type="button" class="btn btn-primary btn-block waves-effect waves-light">go to checkout</button>

        </div>
      </div>
      <!-- Card -->


    </div>
    <!--Grid column-->

  </div>
  <!--Grid row-->

</section>
<!--Section: Block Content-->