
<h1> Cette view se trouve dans app/views/charges/new.html.erb on ne peut pas juste integrer le bouton de stripe avec elle<h1>

<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Le montant du panier est de <%= current_order.subtotal %> â‚¬ </span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Paiement"
          data-amount="amount"
          data-locale="auto"></script>
<% end %>
